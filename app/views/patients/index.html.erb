          <div class="x_title">
            <h1>Patients</h1>
<table id="patients-data-table" class="table table-striped table-bordered data-table" style="width:100%">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Registration status</th>
      <th>UHID</th>
      <th>Patient type</th>
      <th>Assigned doctor</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @confirmed_appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient.first_name %></td>
        <td><%= appointment.patient.last_name %></td>
        <td><%= appointment.patient.registration_done? ? 'Done' : 'Not done' %></td>
        <td><%= appointment.patient.uhid %></td>
        <td><%= appointment.patient.patient_type %></td>
        <td><%= appointment.doctor.full_name %></td>
        <td><%= link_to appointment.patient, title: "View", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
          <i class="fa fa-eye" aria-hidden="true"></i>
          <% end %>
        </td>

        <td><%= link_to edit_patient_path(appointment.patient), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', appointment.patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<!-- page content -->
<div class="right_col" role="main">
      <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row patients-row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
          <div class="pull-left">
            <%= link_to new_patient_path, class: "btn btn-primary" do %>
              <i class="fa fa-user-plus" aria-hidden="true" style="font-size: 20px;"></i> Register new patient
            <% end %>
          </div>
          <div class="x_title">
            <h1 style="margin-left: 40%;">Patient Registration</h1>
            <table id="patients-data-table" class="table table-striped table-bordered data-table" style="width:100%">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Registration status</th>
                  <th>Assigned doctor</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @confirmed_appointments.each do |appointment| %>
                  <% if !appointment.patient.registration_done? %>
                    <tr>
                      <td><%= appointment.patient.full_name %></td>
                      <td><%= appointment.patient.registration_done? ? 'Done' : 'Not done' %></td>
                      <td><%= appointment.doctor.full_name %></td>
                      <td><%= link_to edit_patient_path(appointment.patient), title: "Register", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                        <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


<!-- page content -->
<div class="right_col" role="main">
  
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row patients-row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
          <!-- <div class="pull-left">
            <%= link_to new_patient_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus-circle" aria-hidden="true" style="font-size: 20px;"></i> Register new patient
            <% end %>
          </div> -->
          <div class="x_title">
            <h1 style="margin-left: 40%;">Inpatients</h1>
            <table id="patients-data-table" class="table table-striped table-bordered data-table" style="width:100%">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>UHID</th>
                  <th>Doctor(s) incharge</th>
                  <th>Nurse(s) incharge</th>
                  <th>Allocated Bed</th>
                  <th>Room no.</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @inpatients.each do |ip| %>
                  <tr>
                    <td><%= ip.full_name %></td>
                    <td><%= ip.uhid %></td>
                    <td><%= ip.try(:doctor).try(:full_name) %></td>
                    <td></td>
                    <td><%= ip.try(:bed).try(:bed_no) %></td>
                    <td><%= ip.try(:room).try(:room_no) %></td>
                    <td><%= link_to edit_inpatient_path(ip), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


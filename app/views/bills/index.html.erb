<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table>
  <thead>
    <tr>
      <th>Registration fee</th>
      <th>Doctor fee</th>
      <th>Pharmacy bill</th>
      <th>Maintenance fee</th>
      <th>Tax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.registration_fee %></td>
        <td><%= bill.doctor_fee %></td>
        <td><%= bill.pharmacy_bill %></td>
        <td><%= bill.maintenance_fee %></td>
        <td><%= bill.tax %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


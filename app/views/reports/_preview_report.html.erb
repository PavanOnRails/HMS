<h3 class="text-center"><%= title.humanize.titleize %></h3>
<table>
	<thead>
	  <tr>
	    <% headers.each do |header| %>
	      <th><%= header.humanize.titleize %></th>
	    <% end %>
	  </tr>
  </thead>
  <tbody>
    <% data.each do |d| %>
      <tr>
        <% d.attributes.except("id").each do |name, value| %>
          <td><%= name == "department_id" ? Department.find_by(id: value).try(:name) : value %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table><br><br>
<div class="text-center">
	<%= link_to 'Export', generate_pdf_path(:format => :pdf, title: title, headers: headers, data: data), class: "btn btn-primary" %>
</div>

<style type="text/css">
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>

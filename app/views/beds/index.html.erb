<!-- page content -->
<div class="right_col" role="main">
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row index-row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
        	<div class="pull-left">
            <%= link_to new_bed_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus" aria-hidden="true" style="font-size: 20px;"></i> Add new bed
            <% end %>
          </div><br>
          <div class="x_title">
          <h1 style="margin-left: 40%;">Beds</h1>

          <table id="beds-data-table" class="table table-striped table-bordered data-table" style="width:100%">
            <thead>
              <tr>
                <th>Ward</th>
                <th>Room</th>
                <th>Bed No.</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @beds.each do |bed| %>
                <tr id="bed-row-<%= bed.id %>">
                  <td><%= bed.ward.name %></td>
                  <td><%= bed.room.name %></td>
                  <td><%= bed.bed_no %></td>
                  <td><%= bed.status %></td>
                  <td>
                  	<%= link_to edit_bed_path(bed), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>&nbsp;&nbsp;
                    <%= link_to bed_path(bed), method: :delete, title: "Delete", data: { confirm: 'Are you sure?', "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


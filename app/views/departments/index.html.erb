<!-- page content -->
<div class="right_col" role="main">
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row index-row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
        	<div class="pull-left">
            <%= link_to new_department_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus" aria-hidden="true" style="font-size: 20px;"></i> Add new department
            <% end %>
          </div>
          <br>
          <div class="x_title">
          <h1 style="margin-left: 40%;">Departments</h1>

          <table id="beds-data-table" class="table table-striped table-bordered data-table" style="width:100%">
            <thead>
              <tr>
                <th>Name</th>
                <th>HOD</th>
                <th>Short Name</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @departments.each do |dep| %>
                <tr id="dep-row-<%= dep.id %>">
                  <td><%= dep.name %></td>
                  <td><%= dep.HOD %></td>
                  <td><%= dep.short_name %></td>
                  <td>
                  	<%= link_to edit_department_path(dep), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>&nbsp;&nbsp;
                    <%= link_to department_path(dep), method: :delete, title: "Delete", data: { confirm: 'Are you sure?', "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


<!-- page content -->
<div class="right_col" role="main">
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row index-row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
          <div class="pull-left">
            <%= link_to new_doctor_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus" aria-hidden="true" style="font-size: 20px;"></i> Add new doctor
            <% end %>
          </div><br>
          <div class="x_title">
          <h1 style="margin-left: 40%;">Doctors</h1>

          <table id="doctors-data-table" class="table table-striped table-bordered data-table" style="width:100%">
            <thead>
              <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Contact Number</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @doctors.each do |doctor| %>
                <tr id="doctor-row-<%= doctor.id %>">
                  <td><%= doctor.full_name %></td>
                  <td><%= doctor.designation %></td>
                  <td><%= doctor.phone_number %></td>
                  <td>
                    <%= link_to edit_doctor_path(doctor), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>&nbsp;&nbsp;
                    <%= link_to doctor_path(doctor), method: :delete, title: "Delete", data: { confirm: 'Are you sure?', "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


<h1>This is staff dashboard</h1>
<div class="pull-left">
	<%= link_to 'Register a new patient', new_patient_path, class: "btn btn-primary" %>
</div>
<h1>Appointment Requests</h1>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Appointment Date</th>
      <th>Requested by</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.try(:doctor).try(:full_name) %></td>
        <td><%= appointment.appointment_date.strftime("%B %d, %Y") if appointment.appointment_date.present? %></td>
        <td><%= appointment.try(:patient).try(:full_name) %></td>
        <td><%= appointment.status %></td>
        <% if appointment.pending? %>
	        <td><%= link_to 'Confirm', update_status_path(appointment, {status: :confirm}), method: :patch, class: "btn btn-primary", data: {confirm: "Are you Sure?"} %></td>
	        <td><%= link_to 'Decline', '#', class: "btn btn-primary", data: { "toggle" => "modal", 'target' => "#declineModal-#{appointment.id}" } %></td>
	      <% end %>
      </tr>
      <!-- Modal -->
			<div class="modal fade" id="declineModal-<%= appointment.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">&times;</span>
			        </button>
			      </div>
			      <div class="modal-body">
			        <%= form_for appointment, url: appointment_path(appointment), method: :patch do |f| %>
                <%= f.text_area :reason_for_decline, class: "form-control", placeholder: "Enter your reason for decline" %><br>
                <div class="text-center">
                <%= f.hidden_field :status, value: :declined %>
                  <%= f.submit "Save", class: "btn btn-primary" %>
                </div>
              <% end %>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			      </div>
			    </div>
			  </div>
			</div>
    <% end %>
  </tbody>
</table>

<br>

<% unless @confirmed_appointments.blank? %>
	<h1>Confirmed Appointments</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Doctor</th>
	      <th>Appointment Date</th>
	      <th>Requested by</th>
	      <th>Status</th>
	      <th colspan="1"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @confirmed_appointments.each do |appointment| %>
	      <% unless appointment.patient.registration_done? %>
		      <tr>
		        <td><%= appointment.try(:doctor).try(:full_name) %></td>
		        <td><%= appointment.appointment_date.strftime("%B %d, %Y") if appointment.appointment_date.present? %></td>
		        <td><%= appointment.try(:patient).try(:full_name) %></td>
		        <td><%= appointment.status %></td>
			      <td><%= link_to 'Register Patient', edit_patient_path(appointment.patient.id) %></td>
		      </tr>
		    <% end %>
	    <% end %>
	  </tbody>
	</table>
<% end %>

<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
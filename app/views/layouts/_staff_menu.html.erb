<% if current_staff.admin == true %>
  <% if current_department && current_department.short_name == 'OPD' %>
    <%= render 'layouts/opd_menu' %>
  <% elsif current_department && current_department.short_name == 'IPD' %>
    <%= render 'layouts/ipd_menu' %>
  <% elsif current_department && current_department.short_name == 'BB' %>
    <%= render 'layouts/bb_menu' %>
  <% elsif current_page?(employee_dashboard_path(current_staff)) %>
    <%= render 'layouts/employee_menu' %>
  <% end %>
<% elsif current_staff.super_admin == true %>
  <% if current_department && current_page?(department_dashboard_path(current_staff, current_department)) %>
	  <% if current_department && current_department.short_name == 'OPD' %>
	    <%= render 'layouts/opd_menu' %>
	  <% elsif current_department && current_department.short_name == 'IPD' %>
	    <%= render 'layouts/ipd_menu' %>
	  <% elsif current_department && current_department.short_name == 'BB' %>
	    <%= render 'layouts/bb_menu' %>
	  <% end %>
	<% elsif current_page?(super_admin_dashboard_path(current_staff))%>
	  <%= render 'layouts/super_admin_menu' %>
	<% elsif current_page?(employee_dashboard_path(current_staff)) %>
	  <%= render 'layouts/employee_menu' %>
	<% end %>
<% end %>
<!-- page content -->
<div class="right_col" role="main">
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row index-row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
        	<div class="pull-left">
            <%= link_to new_blood_bank_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus" aria-hidden="true" style="font-size: 20px;"></i> Add new blood bank
            <% end %>
          </div>
          <br>
          <div class="x_title">
          <h1 style="margin-left: 40%;">Blood Banks</h1>

          <table id="beds-data-table" class="table table-striped table-bordered data-table" style="width:100%">
            <thead>
              <tr>
                <th>Name</th>
                <th>Hospital</th>
                <th>Contact Number</th>
                <th>Incharge</th>
                <th>Address</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @blood_banks.each do |bb| %>
                <tr id="bb-row-<%= bb.id %>">
                  <td><%= bb.name %></td>
                  <td><%= bb.try(:hospital).try(:name) %></td>
                  <td><%= bb.phone_number %></td>
                  <td><%= bb.incharge %></td>
                  <td><%= bb.address %></td>
                  <td>
                  	<%= link_to edit_blood_bank_path(bb), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>&nbsp;&nbsp;
                    <%= link_to blood_bank_path(bb), method: :delete, title: "Delete", data: { confirm: 'Are you sure?', "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


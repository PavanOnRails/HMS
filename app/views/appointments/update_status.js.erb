<% if @appointment.confirmed? %>
  $(".custom-flash-message").text("Appointment successfully confirmed");
<% elsif @appointment.declined? %>
  $("#declineModal-<%= @appointment.id %>").modal('hide');
  $(".custom-flash-message").text("Appointment successfully declined");
<% end %>
$('.custom-flash-message').delay(500).fadeIn('normal', function() {
  $(this).delay(3000).fadeOut();
});
$("#appointment-row-<%= @appointment.id %>").delay(3000).fadeOut();
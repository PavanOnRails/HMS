<!-- page content -->
<div class="right_col" role="main">
    <% flash.each do |key, value| %>
      <div class="flash-message text-center"><%= value %></div>
    <% end %>
    <div class="row index-row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:700px;">
          <div class="pull-left">
            <%= link_to new_staff_path, class: "btn btn-primary" do %>
              <i class="fa fa-plus" aria-hidden="true" style="font-size: 20px;"></i> Add new staff
            <% end %>
          </div>
          <div class="pull-right">
            <%= link_to '#', class: "btn btn-primary", data: { "toggle" => "modal", 'target' => "#importModal"} do %>
              <i class="fa fa-cloud-upload" aria-hidden="true" style="font-size: 20px;"></i>&nbsp;&nbsp;Import
            <% end %>
          </div>
          <br>
          <div class="x_title">
          <h1 style="margin-left: 40%;">Staff</h1>

          <table id="staff-data-table" class="table table-striped table-bordered data-table" style="width:100%">
            <thead>
              <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Contact Number</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @staffs.each do |staff| %>
                <tr id="staff-row-<%= staff.id %>">
                  <td><%= staff.full_name %></td>
                  <td><%= staff.designation %></td>
                  <td><%= staff.phone_number %></td>
                  <td>
                    <%= link_to edit_staff_path(staff), title: "Edit", data: { "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>&nbsp;&nbsp;
                    <%= link_to staff_path(staff), method: :delete, title: "Delete", data: { confirm: 'Are you sure?', "toggle" => "tooltip", 'placement' => "top"} do %>
                      <i class="fa fa-trash-o" aria-hidden="true" style="font-size: 20px;"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="clearfix"></div>
          <!-- Modal -->
          <div class="modal fade decline-modal" id="importModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= form_tag import_path(class_name: "Staff"), multipart: true, authenticity_token: true do |f| %>
                    <%= file_field_tag :file, class: "form-control-file text-center" %><br><br>
                    <div class="text-center">
                      <%= submit_tag "Import", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

